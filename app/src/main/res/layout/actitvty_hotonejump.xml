<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ee3d43"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hot_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/menu_action_back" />

        <android.support.design.widget.TabLayout
            android:id="@+id/hot_tablayout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_hot_back"
            app:tabGravity="center"
            app:tabMode="scrollable">
        </android.support.design.widget.TabLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/hot_tablayout"
            android:background="@mipmap/attendance_share_icon" />


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/hot_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"></android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hot_xin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/ic_feed_favourite_normal" />

        <ImageView
            android:layout_marginRight="40dp"
            android:id="@+id/iv_hot_fenxiang"
            android:layout_toRightOf="@+id/iv_hot_xin"
            android:background="@mipmap/ic_action_compact_share"
            android:layout_width="30dp"
            android:layout_height="30dp" />

            <Button
                android:textColor="#FFFAFAFA"
                android:text="去天猫购买"
                android:layout_toRightOf="@+id/iv_hot_fenxiang"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/hot_yuanjiao"/>

    </RelativeLayout>

</LinearLayout>